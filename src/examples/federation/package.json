{
	"name": "@exogee/graphweaver-example-federation",
	"private": true,
	"version": "1.0.0-beta.3",
	"license": "MIT",
	"description": "Example app used to test federation compatibility",
	"main": "lib/index.js",
	"source": "src/index.ts",
	"directories": {
		"lib": "lib"
	},
	"files": [
		"lib"
	],
	"scripts": {
		"build": "graphweaver build && cp dist/backend/index.js integration/index.js",
		"start": "tsx src/backend/index.ts",
		"print": "graphweaver print-schema --output integration/schema.graphql",
		"test": "pnpm build && cd integration && npm test"
	},
	"dependencies": {
		"@apollo/server": "4.10.4",
		"@as-integrations/hapi": "2.0.1",
		"@exogee/graphweaver": "workspace:*",
		"@exogee/graphweaver-server": "workspace:*",
		"@hapi/hapi": "21.3.9",
		"dotenv": "16.4.5"
	},
	"devDependencies": {
		"@types/node": "20.14.0",
		"graphweaver": "workspace:*",
		"tsx": "4.11.0",
		"typescript": "5.4.5"
	},
	"keywords": [
		"graphql",
		"gql",
		"headless",
		"cms",
		"federation"
	]
}
